<div class="container mt-5">
  <div class="row mt-5">
    <div class="col-md-6 m-auto">
      <div class="card card-body" style="border-radius: 10px; width: 500px; margin: 0 auto;">
        <h1 class="text-center">Register</h1>
        <%- include('./partials/messages'); %>
        <form action="/users/register" method="POST">
          <div class="mb-3">
            <label class="form-label">Masukkan Nama Anda</label>
            <input type="name" class="form-control" id="name" name="name" placeholder="Masukkan Nama Anda" value="<%= typeof name != 'undefined' ? name : '' %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" class="form-control" id="email" name="email" placeholder="Masukkan Email Anda" value="<%= typeof email != 'undefined' ? email : '' %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Password</label>
            <input type="password" class="form-control" id="password" name="password" placeholder="Password" value="<%= typeof name != 'undefined' ? name : '' %>">
          </div>
          <div class="mb-3">
            <label class="form-label">Confirm Password</label>
            <input type="password" class="form-control" id="password2" name="password2" placeholder="Confirm Password" value="<%= typeof password2 != 'undefined' ? password2 : '' %>">
          </div>
          <button type="submit" class="btn btn-success btn-block">Register</button>
        </form>
        <p class="mt-3">You Already Have an Account? <a class="text-danger" href="/users/login">Login</a></p>
      </div>
    </div>
  </div>
</div>